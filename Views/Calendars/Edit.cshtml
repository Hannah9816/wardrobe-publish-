@model WardRobe.Models.Calendar

@{
    ViewData["Title"] = "Edit";

    var wardrobe = (List<Wardrobe>)ViewData["wardrobe"];
}

<h2 style="font-family:'Freestyle Script'; font-size:50px; color:darkturquoise">Edit Ootd</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <select asp-for="Description" class="form-control" asp-items='new SelectList(wardrobe,"Name","Name")'></select>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

